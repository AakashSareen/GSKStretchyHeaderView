  pod 'GSKStretchyHeaderView', :path => '../'

  pod 'Specta'
  pod 'Expecta'
  pod 'FBSnapshotTestCase', git: 'https://github.com/facebook/ios-snapshot-test-case.git'
  pod 'Expecta+Snapshots'
end
